<%= link_to response.event, class: "list-group-item" do %>
	<h4 class="list-group-item-heading">
		<%= response.event.title %>
		<% case response.response
			when 1 %><span class="label label-success pull-right">Attending</span>
			<% when 0 %><span class="label label-warning pull-right">Maybe</span>
			<% when -1 %><span class="label label-danger pull-right">Not attending</span>
		<% end %>
	</h4>
	<p class="list-group-item-text small">Starts in <%= time_ago_in_words(response.event.start_datetime) %></p>
<% end %>