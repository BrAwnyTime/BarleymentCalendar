<% provide :title, "Home" %>

<% if user_signed_in? %>
	<%= render 'layouts/calendar' %>
<% else %>
	<div class="jumbotron">
		<h1>Welcome to the Members of Barleyment shared calendar!</h1>
		<p>If you already have a log in, you can sign in <%= link_to 'here', new_user_session_path %>.</p>
		<p>Otherwise, <%= link_to "Sign-Up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
	</div>
<% end %>