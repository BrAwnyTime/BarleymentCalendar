<script type='text/javascript'>

	$(document).ready(function() {
		
		$('#calendar').fullCalendar({
			header: {
				left: 'prev,next today',
				center: 'title',
				right: 'month,agendaWeek,agendaDay'
			},
			defaultDate: '<%= Time.new.strftime("%Y-%m-%d") %>',
			defaultView: 'month',
			editable: true
		});		
	});

</script>

<div id="calendar"></div>